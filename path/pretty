#!/usr/bin/perl
use strict;
use experimental qw(switch);

my $contents;
my $output;

undef $/;
my $contents;

#Split entities by line:
while (<>)
{
  $contents = $_;
  #Newlines:
  $contents =~ s/[\n\r]/ /sg;

  #HTML:
  $contents =~ s/(<[\/\w].*[\w]>)/\n$1\n/sg;

  #Trailing commas:
  $contents =~ s/\s*,\s*/,\n/sg;

  #Bracket isolation:
  $contents =~ s/\s*([\(\)\[\]\{\}])\s*/\n$1\n/sg;
}
$/ = "\n";

#Indentation:
my $indent = 0;
open(LINES, "<", \$contents) or die qq~Could not analyze by line~;
open(OUTPUT, ">", \$output) or die qq~Could not write to variable~;
while (<LINES>)
{
  my $line = $_;
  chomp($line);
  $indent-- if($line =~ /^[\)\]\}]$/ or $line =~ /^<\/\w.*\w>$/);
  if($line ne "") {
    print OUTPUT ("  " x $indent) . $line . "\n";
  }
  $indent++ if($line =~ /^[\(\[\{]$/ or $line =~ /^<\w.*\w>$/);
  #$block = /^\s*\w+\(/i .. /\);?\s*$/i

}
close(LINES);
close(OUTPUT);

#Consolidation:
undef $/;
open(REFLOW, "<", \$output) or die qq~Could not reflow lines~;
while (<REFLOW>)
{
  $contents = $_;
  #Consolidate empty brackets
  $contents =~ s/\[\n\s*\]/[]\n/sg;
  $contents =~ s/\(\n\s*\)/()\n/sg;
  $contents =~ s/\{\n\s*\}/{}\n/sg;

  #Empty brackets on the same line as assignment
  $contents =~ s/([=:])\n\s*([\(\[\{])/$1$2/sg;
  #comma on same line as ], ), }
  $contents =~ s/([\]\)\}])\n\s*,/$1,\n/sg;

  #Remove blank lines:
  $contents =~ s/\n\n+/\n/sg;
}
$/ = "\n";
close(REFLOW);

print "$contents";