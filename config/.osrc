#!/bin/bash

case "$(uname -s)" in
  Darwin) #Mac
      export LSCOLORS="ExGxcxdxbxegedabagacad"
      export TMP=/tmp
      function geany() {
        open -a geany $@
      }
      alias md5sum=md5
      alias tac="tail -r"
      alias browser="open"
      alias sedi="sed -i ''"
      alias resource="source ~/.bash_profile"
    ;;
  Linux)
      export LSCOLORS="di=1;34:ln=1;36:so=32:pi=33:ex=31:bd"
      export TMP=/dev/shm
      alias browser="python -m webbrowser"
      alias sedi="sed -i"
      alias resource="source ~/.bashrc"
    ;;
esac
